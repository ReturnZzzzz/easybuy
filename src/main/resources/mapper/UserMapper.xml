<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.a.easybuy.dao.UserMapper">
    <select id="getByPage" resultType="User" parameterType="map">
        select * from user
        where role &gt; #{role}
        limit #{start},#{end}
    </select>
    <select id="getById">
        select * from  user
        where id = #{id}
    </select>
    <insert id="addUser" parameterType="User">
        insert into user(name, password, email, phone, img_path, role) values (#{name},#{password},#{email},#{phone},#{img_path},#{role})
    </insert>
    <update id="updateUser" parameterType="User">
            update user set name=#{name},password=#{password},email=#{email},phone=#{phone},img_path=#{img_path},role=#{role}
                        where id=#{id}
    </update>
    <delete id="delUser">
        delete from user where id=#{id}
    </delete>
</mapper>